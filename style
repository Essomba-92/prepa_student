/* --- SECTION ACCUEIL (#main-image) --- */


/* Définition des animations d'entrée */

@keyframes fadeIn {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}

@keyframes slideUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes bounce {
    0%,
    20%,
    50%,
    80%,
    100% {
        transform: translateY(0);
    }
    40% {
        transform: translateY(-10px);
    }
    60% {
        transform: translateY(-5px);
    }
}

#main-image {
    /* MODIFIÉ : Occupe 100% de la hauteur de la fenêtre */
    height: 100vh;
    min-height: 700px;
    /* Hauteur minimum pour les écrans moins hauts */
    /* MODIFIÉ : On aligne le contenu sur la gauche */
    display: flex;
    align-items: center;
    justify-content: flex-start;
    /* Aligne sur la GAUCHE */
    text-align: left;
    /* Aligne le texte sur la GAUCHE */
    position: relative;
    overflow: hidden;
}

#main-image::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: url('images/image_de_fond.jpg') no-repeat center center;
    background-size: cover;
    /* On garde l'animation de vagues, elle est parfaite */
    animation: subtleWaveAnimation 25s ease-in-out infinite alternate;
}

#main-image::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    /* MODIFIÉ : Dégradé pour assombrir la gauche et laisser la droite plus visible */
    background: linear-gradient(to right, rgba(13, 6, 26, 0.8) 30%, rgba(13, 6, 26, 0.2) 100%);
    z-index: 1;
}

#main-image .wrapper {
    position: relative;
    z-index: 2;
}


