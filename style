/* C'est ici que la magie opère : on crée la superposition */

.image-container-fade::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 50%;
    /* Le dégradé couvrira la moitié inférieure de l'image */
    /* Le dégradé va du transparent vers le bleu nuit du flyer */
    background: linear-gradient(to top, var(--bleu-nuit) 0%, transparent 100%);
    pointer-events: none;
    /* Permet de cliquer "à travers" l'effet */
}