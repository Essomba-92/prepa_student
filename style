/* C'est ici que la magie opère : la carte de verre */

#steps ul li {
    flex-basis: 30%;
    padding: 40px 30px;
    text-align: center;
    /* Le fond de verre */
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    /* L'effet de verre dépoli ! */
    -webkit-backdrop-filter: blur(10px);
    /* Pour la compatibilité Safari */
    /* La bordure subtile */
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 15px;
    /* Coins arrondis plus doux */
    /* L'effet de survol */
    transition: transform 0.3s ease, border-color 0.3s ease;
}


/* L'EFFET "FUN" AU SURVOL */

#steps ul li:hover {
    transform: translateY(-10px);
    /* La carte se soulève */
    border-color: var(--rouge-vif);
    /* La bordure s'illumine en rouge */
}

