    background-color: rgba(255, 255, 255, 0.03);
    /* --- DÉBUT DE L'AJOUT DES ICÔNES DE FOND --- */
    /* On liste les 4 images, séparées par des virgules */
    background-image: url('images/icon-atom.png'), url('images/icon-book.png'), url('images/icon-globe.png'), url('images/icon-lightbulb.png');
    /* On leur dit de ne pas se répéter */
    background-repeat: no-repeat;
    /* On définit la taille de chaque icône (dans le même ordre que la liste) */
    background-size: 40px, /* taille de l'atome */
    45px, /* taille du livre */
    40px, /* taille du globe */
    35px;
    /* taille de l'ampoule */
    /* On définit la position de chaque icône (la partie la plus amusante !) */
    background-position: top 20px right 25px, /* Atome: en haut à droite */
    bottom 20px left 25px, /* Livre: en bas à gauche */
    top 80px left 20px, /* Globe: un peu plus bas à gauche */
    bottom 70px right 20px;
    /* Ampoule: un peu plus haut à droite */
}


